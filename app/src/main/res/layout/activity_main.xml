<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">
    </FrameLayout>

    <!--<View-->
        <!--android:id="@+id/div_tab_bar"-->
        <!--android:visibility="visible"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:background="@color/grayLight" />-->

    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:clipChildren="false"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rlHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:addStatesFromChildren="true"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/dd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/btn_home" />

            <TextView
                android:id="@+id/tv_home"
                android:padding="2dp"
                android:textSize="10sp"
                android:layout_centerInParent="true"
                android:text="首页"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dd"/>

        </RelativeLayout>

        <RelativeLayout
            android:addStatesFromChildren="true"
            android:id="@+id/rlClassify"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/dd2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/btn_classify" />
            <TextView
                android:id="@+id/tv_classify"
                android:padding="2dp"
                android:textSize="10sp"
                android:layout_centerInParent="true"
                android:text="分类"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dd2"/>

        </RelativeLayout>

        <RelativeLayout
            android:addStatesFromChildren="true"
            android:id="@+id/rlSearch"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="bottom">

            <RelativeLayout
                android:id="@+id/rl_dd5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:background="@drawable/circle_white">
                <ImageView
                    android:id="@+id/dd5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/btn_search" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_search"
                android:visibility="gone"
                android:padding="2dp"
                android:textSize="10sp"
                android:layout_centerInParent="true"
                android:text="添加"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_dd5"/>

        </RelativeLayout>

        <RelativeLayout
            android:addStatesFromChildren="true"
            android:id="@+id/rlPersonal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/dd3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/btn_personal" />
            <TextView
                android:id="@+id/tv_personal"
                android:padding="2dp"
                android:textSize="10sp"
                android:layout_centerInParent="true"
                android:text="我的"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dd3"/>

        </RelativeLayout>

        <RelativeLayout
            android:addStatesFromChildren="true"
            android:id="@+id/rlRecommand"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/dd4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/btn_recommend" />
            <TextView
                android:id="@+id/tv_recommend"
                android:padding="2dp"
                android:textSize="10sp"
                android:layout_centerInParent="true"
                android:text="推荐"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dd4"/>

        </RelativeLayout>>

    </LinearLayout>





</FrameLayout>